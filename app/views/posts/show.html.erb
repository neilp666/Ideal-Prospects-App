<div class="container">
<% if notice.present? %>
    <p class="alert alert-info">
        <%= notice %> 
    </p>

<% end %>

<h4>
  <strong>Company:</strong>
  <%= @post.company %>
</43>

<h4>
  <strong>Contact:</strong>
  <%= @post.contact %>
</h4>

<h4>
  <strong>Email:</strong>
  <%= @post.email %>
</h4>

<h4>
  <strong>Telephone:</strong>
  <%= @post.telephone %>
</h4>

<h4>
  <strong>Website:</strong>
  <%= @post.website %>
</h4>

<p class="text-muted">
  Posted on <%= @post.created_at.to_formatted_s(:lang) %>
</p>

<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-link" %> |
<%= link_to 'Back', posts_path, class: "btn btn-link" %>
</div>
