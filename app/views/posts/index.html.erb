<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Website</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.company %></td>
        <td><%= post.contact %></td>
        <td><%= post.email %></td>
        <td><%= post.telephone %></td>
        <td><%= post.website %></td>
        <td><%= link_to 'Show', post, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-link" %>
